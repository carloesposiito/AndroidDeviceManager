<Window x:Class="DeviceManager.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeviceManager"
        xmlns:converters="clr-namespace:DeviceManager.Converters"
        mc:Ignorable="d"
        d:Visibility="Visible"
        AllowsTransparency="True"
        Background="LightGray"
        Height="650"
        ResizeMode="NoResize"
        Title="MainWindow"
        Visibility="Collapsed"
        Width="350"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:Converter_DevicesCountToVisibility x:Key="Converter_DeviceCountToVisibility" />
        <converters:Converter_BooleanToString TrueValue="Operation in progress, please wait..."
                                              FalseValue=""
                                              x:Key="Converter_BooleanToString" />
        <converters:Converter_InverseBoolean x:Key="Converter_InverseBoolean" />
        <converters:Converter_AuthStatusToVisibility x:Key="Converter_AuthStatusToVisibility" />
        <converters:Converter_AuthStatusToVisibility_Reverse x:Key="Converter_AuthStatusToVisibility_Reverse" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--#region Top border for dragmove -->

        <Border Background="LightGray"
                Height="15"
                Grid.Row="0"
                MouseLeftButtonDown="border_Upper_MouseLeftButtonDown">
        </Border>

        <!--#endregion-->

        <!--#region Menu -->

        <Menu Background="LightGray"
              BorderThickness="0"
              BorderBrush="Transparent"
              Grid.Row="1">
            <MenuItem Header="Scan"
                      IsEnabled="{Binding IsBusy, Converter={StaticResource Converter_InverseBoolean}}"
                      Margin="5,0,0,0"
                      Style="{StaticResource menuItem_Common}"
                      x:Name="menuItem_ScanDevices">

                <MenuItem Header="Scan devices"
                          Click="menuItem_ScanDevices_Click"
                          IsCheckable="False"/>
                
                <MenuItem Header="Connect wireless device" IsCheckable="False" />

            </MenuItem>

            <MenuItem Header="Devices"
                      Style="{StaticResource menuItem_Common}"
                      Visibility="{Binding DevicesCount, Converter={StaticResource Converter_DeviceCountToVisibility}}"
                      x:Name="menuItem_Devices" />

            <MenuItem Header="Exit"
                      Click="menuItem_Exit_Click"
                      IsEnabled="{Binding IsBusy, Converter={StaticResource Converter_InverseBoolean}}"
                      Style="{StaticResource menuItem_Common}"
                      x:Name="menuItem_Exit" />

        </Menu>

        <!--#endregion-->

        <Grid Background="LightGray"
              Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!--Active device section-->
            <StackPanel HorizontalAlignment="Center"
                        Margin="0,25"
                        x:Name="stackPanel_Devices">

                <!--#region Fake device for designer mode -->

                <d:Border Height="300"
                          Width="150"
                          Background="Gray"
                          CornerRadius="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="15" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Border Background="Black"
                                CornerRadius="7.5"
                                Height="7.5"
                                Margin="1.25"
                                Width="7.5" />

                        <Border Background="Black"
                                CornerRadius="7.5"
                                Grid.Row="1"
                                Padding="3"
                                Margin="7.5,0,7.5,10">
                        </Border>

                    </Grid>
                </d:Border>

                <!--#endregion-->

            </StackPanel>

            <!--Buttons section-->
            <Grid Grid.Row="1" x:Name="grid_DeviceCommands">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Style="{StaticResource border_BtnCommon}" Visibility="{Binding ActiveDevice.AuthStatus, Converter={StaticResource Converter_AuthStatusToVisibility}}">
                    <Button Content="Authorize device"
                            Style="{StaticResource btn_Common}" />
                </Border>

                <Border Grid.Row="1"
                        Style="{StaticResource border_BtnCommon}">
                    <Button Content="Backup"
                            Style="{StaticResource btn_Common}" />
                </Border>

                <Border Grid.Row="2"
                        Style="{StaticResource border_BtnCommon}">
                    <Button Content="Restore"
                            Style="{StaticResource btn_Common}" />
                </Border>

                <Border Grid.Row="3"
                        Style="{StaticResource border_BtnCommon}">
                    <Button Content="Uninstall apps"
                            Style="{StaticResource btn_Common}" />
                </Border>

            </Grid>
            
        </Grid>

        <!--#region Bottom border -->

        <Border Grid.Row="3">
            <Label d:Content="Debug mode, development in progress!"
                   Content="{Binding IsBusy, Converter={StaticResource Converter_BooleanToString}}"
                   FontSize="12"
                   FontStyle="Italic"
                   Foreground="Black"
                   Grid.Row="2"
                   HorizontalContentAlignment="Center"
                   Padding="0,10"
                   x:Name="lbl_CurrentOperation" />

        </Border>

        <!--#endregion-->

    </Grid>

</Window>

