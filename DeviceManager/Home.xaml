<Window x:Class="DeviceManager.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeviceManager"
        xmlns:converters="clr-namespace:DeviceManager.Converters"
        mc:Ignorable="d"
        d:Visibility="Visible"
        AllowsTransparency="True"
        Background="Transparent"
        Height="650"
        Title="MainWindow"
        Visibility="Collapsed"
        Width="350"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:Converter_DevicesCountToVisibility x:Key="Converter_DeviceCountToVisibility" />
        <converters:Converter_BooleanToString TrueValue="Operation in progress, please wait..."
                                              FalseValue=""
                                              x:Key="Converter_BooleanToString" />
        <converters:Converter_InverseBoolean x:Key="Converter_InverseBoolean" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--#region Top border -->

        <Border Background="LightGray"
                CornerRadius="10,10,0,0"
                Height="15"
                Grid.Row="0"
                MouseLeftButtonDown="border_Upper_MouseLeftButtonDown">
        </Border>

        <!--#endregion-->

        <!--#region Menu -->

        <Menu Background="LightGray"
              Grid.Row="1">
            <MenuItem Header="Scan"
                      Click="menuItem_ScanDevices_Click"
                      IsEnabled="{Binding IsBusy, Converter={StaticResource Converter_InverseBoolean}}"
                      Margin="5,2.5,0,2.5"
                      Style="{StaticResource menuItem_Common}"
                      x:Name="menuItem_ScanDevices" />

            <MenuItem Header="Devices"
                      Style="{StaticResource menuItem_Common}"
                      Visibility="{Binding DevicesCount, Converter={StaticResource Converter_DeviceCountToVisibility}}"
                      x:Name="menuItem_Devices" />

            <MenuItem Header="Exit"
                      Click="menuItem_Exit_Click"
                      IsEnabled="{Binding IsBusy, Converter={StaticResource Converter_InverseBoolean}}"
                      Style="{StaticResource menuItem_Common}"
                      x:Name="menuItem_Exit" />

        </Menu>

        <!--#endregion-->

        <Grid Background="LightGray"
              Grid.Row="2">
            

            <Border Grid.Row="0"
                    HorizontalAlignment="Center"
                    Margin="0,20">
                <StackPanel Grid.Column="1"
                            x:Name="stackPanel_Devices">

                    <!--#region Fake device for designer mode -->

                    <d:Border Height="300"
                              Width="150"
                              Background="Gray"
                              CornerRadius="15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="15" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Border Background="Black"
                                    CornerRadius="7.5"
                                    Height="7.5"
                                    Margin="1.25"
                                    Width="7.5" />

                            <Border Background="Black"
                                    CornerRadius="7.5"
                                    Grid.Row="1"
                                    Padding="3"
                                    Margin="7.5,0,7.5,10">
                            </Border>

                        </Grid>
                    </d:Border>

                    <!--#endregion-->

                </StackPanel>
            </Border>

           

        </Grid>

        <!--#region Bottom border -->

        <Border Background="LightGray"
                CornerRadius="0,0,10,10"
                Grid.Row="3">

            <Label d:Content="Debug mode, development in progress!"
                   Content="{Binding IsBusy, Converter={StaticResource Converter_BooleanToString}}"
                   FontSize="8"
                   FontStyle="Italic"
                   Foreground="Black"
                   Grid.Row="2"
                   HorizontalContentAlignment="Center"
                   x:Name="lbl_CurrentOperation" />

        </Border>

        <!--#endregion-->

    </Grid>

</Window>

